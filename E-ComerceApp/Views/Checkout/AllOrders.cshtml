@using E_ComerceApp.ViewModels;
@model List<OrderViewModel>

<h2>Your Orders</h2>
<table>
    <thead>
        <tr>
            <th>Order Id</th>
            <th>Phone Number</th>
            <th>Address</th>
            <th>Total Price</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderId</td>
                <td>@order.PhoneNumber</td>
                <td>@order.Address</td>
                <td>@order.TotalPrice</td>
                <td>
                    <table>
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Quantity</th>
                                <th>Price</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var detail in order.OrderItems)
                            {
                                <tr>
                                    <td>@detail.ProductName</td>
                                    <td>@detail.Quantity</td>
                                    <td>@detail.Price</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </td>
            </tr>
        }
    </tbody>
</table>
